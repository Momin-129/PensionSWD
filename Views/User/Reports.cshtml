<form id="historyForm">
    <div class="text-dark vh-100 d-flex flex-column justify-content-center p-5">
        <div class="container d-flex flex-column align-items-center justify-content-center p-3 shadow rounded gap-2">
            <label for="Reference Number" class="form-label fw-bold">Reference Number</label>
            <input class="form-control w-50 rounded-pill" placeholder="Reference Number" type="text" name="refNo"
                id="refNo" required />
            <button type="submit" class="btn btn-dark rounded-5 w-25 mx-auto" id="submit">Display History</button>
        </div>


        <div class="container-fluid bg-white p-0 shadow-lg flex-column justify-content-between mt-3"
            style="border-radius: 10px;max-height:600px;overflow-y:auto;" id="historyNicjk">
            <table class="table table-striped table-borderless table-responsive mb-0">
                <thead class="bg-dark text-white">
                    <th>Reference Number</th>
                    <th>Table Name</th>
                    <th>Updated Column</th>
                    <th>Column Description</th>
                    <th>Old Value</th>
                    <th>New Value</th>
                    <th>Bulk Update</th>
                    <th>File Used</th>
                    <th>Updated By</th>
                    <th>IP Address</th>
                    <th>Reason</th>
                    <th>Updated Date</th>
                </thead>
                <tbody id="reportBodyNicjk">

                </tbody>
            </table>
        </div>

        <div id="history" class="container bg-white p-0 shadow-lg flex-column justify-content-between mt-3"
            style="border-radius: 10px;max-height:600px;overflow-y:auto;">
            <table class="table table-striped table-borderless table-responsive mb-0">
                <thead class="bg-dark text-white">
                    <th>Updated Date</th>
                    <th>Updated By</th>
                    <th>File Uploaded</th>
                    <th>File Type</th>
                </thead>
                <tbody id="reportBody">

                </tbody>
            </table>
        </div>
    </div>
</form>

