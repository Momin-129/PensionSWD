@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="text-dark d-flex flex-column p-5">
    <form id="getRecord">
        <div class="container w-50 d-flex flex-column align-items-center gap-2 shadow-lg p-3 rounded">
            <label for="SearchType" class="form-label fw-bold">Search Type</label>
            <select class="form-select w-50 rounded-pill" name="searchType" id="searchType" required>
                <option value="" disabled selected>Please Select</option>
                <option value="refId">Reference Number</option>
                <option value="bankAccount">Bank Account Number</option>
            </select>
            <input class="form-control w-50 rounded-pill" type="text" name="inputNumber" id="inputNumber"
                placeholder="Enter Reference/Account Number" required>
            <button type="submit" class="btn btn-dark w-25 rounded-5">Dispaly Details</button>
        </div>
    </form>


    <div class="duplicate container bg-white p-5 shadow-lg flex-column justify-content-between mt-3"
        style="border-radius: 10px;display:none">
        <table class="table table-borderless table-responsive mb-0" id="duplicateRecords">
            <thead class="bg-dark text-white">
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <div class="container bg-white p-5 shadow-lg flex-column justify-content-between mt-3" style="border-radius: 10px;">
        <table id="citizenDetails" class="table table-borderless table-responsive mb-0" style="width: 100%;">
            <thead class="bg-dark text-white">
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
    <div class="container bg-white p-5 shadow-lg flex-column justify-content-between mt-5" style="border-radius: 10px;">
        <table class="table table-striped table-borderless table-responsive mb-0" id="paymentDetails">
            <thead class="bg-dark text-white">
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>

    <div class="container-fluid mt-5">
        <p id="noRecord" class="fs-1 fw-bold text-center" style="display: none;">NO RECORD FOUND</p>
    </div>
</div>


<script src="~/js/User/user.js"></script>
<script src="~/js/User/script.js"></script>