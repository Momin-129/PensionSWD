@{
    ViewData["Title"] = "Privacy Policy";
}

<form id="getRecord">
    <div class="text-dark vh-100 d-flex flex-column justify-content-center p-5">
        <div class="container w-50 d-flex flex-column align-items-center gap-2 shadow-lg p-3 rounded">
            <label for="SearchType" class="form-label fw-bold">Search Type</label>
            <select class="form-select w-50 rounded-pill" name="searchType" id="searchType">
                <option value="">Please Select</option>
                <option value="refId">Reference Number</option>
                <option value="bankAccount">Bank Account Number</option>
            </select>
            <input class="form-control w-50 rounded-pill" type="text" name="inputNumber" id="inputNumber"
                placeholder="">
        </div>
        <div class="container d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-dark w-25 rounded-5">Dispaly Details</button>
        </div>

        <div class="duplicate container bg-white p-0 shadow-lg flex-column justify-content-between mt-3"
            style="border-radius: 10px;max-height:600px;overflow-y:auto;display:none">
            <table class="table table-borderless table-responsive mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Select</th>
                        <th>Reference Number</th>
                        <th>Name</th>
                        <th>Parentage</th>
                        <th>District</th>
                    </tr>
                </thead>
                <tbody id="duplicateRecords">

                </tbody>
            </table>
        </div>

        <div class="container bg-white p-0 shadow-lg flex-column justify-content-between mt-3"
            style="border-radius: 10px;max-height:600px;overflow-y:auto;">
            <table id="citizenDetails" class="table table-borderless table-responsive mb-0">

            </table>
        </div>
        <div class="container bg-white p-0 shadow-lg flex-column justify-content-between mt-5"
            style="border-radius: 10px;max-height:600px;overflow-y:auto;display:none">
            <table class="table table-striped table-borderless table-responsive mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Year</th>
                        <th>Month</th>
                        <th>Bank Payment File Generated</th>
                        <th>Disperesed Payment By Bank</th>
                    </tr>
                </thead>
                <tbody id="paymentDetails">

                </tbody>
            </table>
        </div>

        <div class="container-fluid mt-5">
            <p id="noRecord" class="fs-1 fw-bold text-center" style="display: none;">NO RECORD FOUND</p>
        </div>
    </div>
</form>


